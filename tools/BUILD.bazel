load("@ai_formation_hazel//tools:mangling.bzl", "hazel_library")
load("@rules_haskell//haskell:defs.bzl", "haskell_binary")

[haskell_binary(
    name = file[:-3],
    srcs = [file],
    visibility = ["//visibility:public"],
    deps = [
        "//hs-github-tools",
        hazel_library("base"),
        hazel_library("bytestring"),
        hazel_library("github"),
        hazel_library("text"),
    ],
) for file in glob(["*.hs"])]
